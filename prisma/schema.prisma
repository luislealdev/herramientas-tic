// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  Log      Log[]
}

model Image {
  id     String @id @default(uuid())
  url    String
  tool   Tool   @relation(fields: [toolId], references: [id])
  toolId String
}

model Tool {
  id            String     @id @default(uuid())
  name          String
  description   String
  advantages    String[]
  disadvantages String[]
  useCases      String[]
  logo          String
  images        Image[]
  categories    Category[]
  slug          String
}

model Log {
  id        String   @id @default(uuid())
  accion    String
  user      User     @relation(fields: [hecho_por], references: [id])
  hecho_por String
  fecha     DateTime @default(now())
  detalles  Json
}

model Category {
  id    String @id @default(uuid())
  tools Tool[]
  name  String
  slug  String
}
